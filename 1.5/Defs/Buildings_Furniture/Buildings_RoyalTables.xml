<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef Name="RoyalTableDesc" ParentName="TableGatherSpotBase" Abstract="True">
        <description>A finely crafted, gold-trimmed table adorned with intricate carvings and polished surfaces. People eat off tables when chairs are placed facing them.</description>
        <graphicData>
            <graphicClass>Graphic_Multi</graphicClass>
            <shaderType>CutoutComplex</shaderType>
        </graphicData>
        <statBases>
            <Flammability>1.0</Flammability>
        </statBases>
        <researchPrerequisites>
            <li>MF_RoyalFurniture</li>
        </researchPrerequisites>
        <!-- Need to remove edge shadows/static sun shadow heights to make the game use shadowData -->
        <castEdgeShadows>false</castEdgeShadows>
        <staticSunShadowHeight>0</staticSunShadowHeight>
        <designationCategory>Furniture</designationCategory>
    </ThingDef>

    <ThingDef ParentName="RoyalTableDesc">
        <defName>Table_Royal1x1c</defName>
        <label>royal table (1x1)</label>
        <graphicData>
            <texPath>NewThings/Furniture/RoyalTables/RoyalTable1x1</texPath>
            <drawSize>(1,1)</drawSize>
            <damageData>
                <rect>(0.20,0.35,0.6,0.6)</rect>
            </damageData>
            <shadowData>
                <volume>(0.45, 0.25, 0.45)</volume>
            </shadowData>
        </graphicData>
        <statBases>
            <MaxHitPoints>70</MaxHitPoints>
            <WorkToBuild>750</WorkToBuild>
            <Mass>5</Mass>
            <Beauty>10</Beauty>
            <StyleDominance MayRequire="Ludeon.RimWorld.Ideology">5</StyleDominance>
        </statBases>
        <size>(1,1)</size>
        <costStuffCount>20</costStuffCount>
        <costList>
            <Gold>10</Gold>
        </costList>
        <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
        <rotatable>false</rotatable>
    </ThingDef>

