        <graphicData>
            <texPath>NewThings/Furniture/RoyalDresser/RoyalDresser</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <drawSize>(2,1)</drawSize>
            <damageData>
                <rectN>(0.1, 0, 1.8, 1)</rectN>
                <rectS>(0.1, 0, 1.8, 1)</rectS>
                <rectE>(0.1, 0, 0.8, 2)</rectE>
                <rectW>(0.1, 0, 0.8, 2)</rectW>
            </damageData>
            <shadowData>
                <volume>(1.7, 0.3, 0.8)</volume>
            </shadowData>
        </graphicData>
        <statBases>
            <MaxHitPoints>140</MaxHitPoints>
            <WorkToBuild>10000</WorkToBuild>
            <Mass>25</Mass>
            <Flammability>1.0</Flammability>
            <Beauty>50</Beauty>
        </statBases>
        <size>(2,1)</size>
        <pathCost>42</pathCost>
        <defaultPlacingRot>South</defaultPlacingRot>
        <costStuffCount>75</costStuffCount>
        <uiOrder>2070</uiOrder>
        <costList>
            <Gold>40</Gold>
        </costList>
        <placeWorkers>
            <li>PlaceWorker_ShowFacilitiesConnections</li>
        </placeWorkers>
        <researchPrerequisites>
            <li>MF_RoyalFurniture</li>
