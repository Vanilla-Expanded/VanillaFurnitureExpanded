  <JobDef>
    <defName>VFE_Play_Computer</defName>
    <driverClass>VanillaFurnitureEC.JobDriver_ExtendedSitFacingBuilding</driverClass>
    <reportString>using computer.</reportString>
    <joyDuration>4000</joyDuration>
    <joyMaxParticipants>1</joyMaxParticipants>
    <!-- Skill XP gain per tick handled per-building using our DefModExtension. -->
    <!-- Handled this way so the 2 JobDeds and JoyGiverDefs could be consolidated into 1. -->
    <joyKind>VFE_ComputerUsage</joyKind>
    <taleOnCompletion>Tale_UsedComputer</taleOnCompletion>
    <allowOpportunisticPrefix>true</allowOpportunisticPrefix>
  </JobDef>

  <JoyGiverDef>
    <defName>VFE_Play_Computer</defName>
    <!-- JoyGiver_InteractBuildingInteractionCell doesn't include a check for <requireChairs>, so we need a custom one. -->
    <giverClass>VanillaFurnitureEC.JoyGiver_InteractBuildingInteractionCellSit</giverClass>
    <baseChance>3.5</baseChance>
    <requireChair>true</requireChair>
    <thingDefs>
      <li>Joy_InudstrialComputer</li>
      <li>Joy_ModernComputer</li>
    </thingDefs>
    <jobDef>VFE_Play_Computer</jobDef>
    <joyKind>VFE_ComputerUsage</joyKind>
    <requiredCapacities>
      <li>Sight</li>
    </requiredCapacities>
  </JoyGiverDef>

