    <joyKind>Gaming_Cerebral</joyKind>
    <taleOnCompletion>PlayedGame</taleOnCompletion>
    <allowOpportunisticPrefix>true</allowOpportunisticPrefix>
  </JobDef>

  <JoyGiverDef>
    <defName>Play_Arcade</defName>
    <giverClass>JoyGiver_InteractBuildingInteractionCell</giverClass>
    <baseChance>3.5</baseChance>
    <desireSit>false</desireSit>
    <thingDefs>
      <li>Joy_Arcade</li>
    </thingDefs>
    <jobDef>Play_Arcade</jobDef>
    <joyKind>Gaming_Cerebral</joyKind>
    <requiredCapacities>
      <li>Sight</li>
    </requiredCapacities>
  </JoyGiverDef>

