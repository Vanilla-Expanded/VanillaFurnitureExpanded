<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="ArtableBedBase">
    <defName>Bed_Ergonomic</defName>
    <label>ergonomic bed</label>
    <description>An ergonomically designed bed to help support the spine, distribute body weight and overall enchance sleep quality.</description>
    <graphicData>
      <texPath>Things/Bedroom/ErgonomicBed/SpacerBed</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(2,2)</drawSize>
      <damageData>
        <rect>(0,0.05,2,1.95)</rect>
      </damageData>
    </graphicData>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>EndTable</li>
          <li>Dresser</li>
          <li>Table_LightEndTable</li>
          <li>Table_RoyalDresser</li>
          <li>Table_RoyalEndTable</li>
          <li>Table_Wardrobe</li>
          <li MayRequire="Ludeon.RimWorld.Ideology">SleepAccelerator</li>
        </linkableFacilities>
      </li>
    </comps>
    <statBases>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <WorkToBuild>15000</WorkToBuild>
      <Mass>75</Mass>
      <Beauty>2</Beauty>
      <BedRestEffectiveness>1.15</BedRestEffectiveness>
      <Comfort>1</Comfort>
      <ImmunityGainSpeedFactor>1.1</ImmunityGainSpeedFactor>
      <SurgerySuccessChanceFactor>1</SurgerySuccessChanceFactor>
    </statBases>
    <size>(1,2)</size>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>60</costStuffCount>
    <costList>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <building>
      <bed_showSleeperBody>False</bed_showSleeperBody>
      <bed_healPerDay>5</bed_healPerDay>
      <paintable>true</paintable>
    </building>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <fillPercent>0.4</fillPercent>
    <pathCost>60</pathCost>
    <leaveResourcesWhenKilled>False</leaveResourcesWhenKilled>
    <staticSunShadowHeight>0.17</staticSunShadowHeight>
    <castEdgeShadows>True</castEdgeShadows>
    <techLevel>Spacer</techLevel>
    <researchPrerequisites>
      <li>MF_ModernFurniture</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    <uiIconScale>0.90</uiIconScale>

    <designationCategory>AOMorefurniture</designationCategory>
  </ThingDef>

