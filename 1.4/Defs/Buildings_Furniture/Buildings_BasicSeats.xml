      <isSittable>true</isSittable>
    </building>
    <uiIconOffset>(0, -0.05)</uiIconOffset>
	<designationCategory>AOMorefurniture</designationCategory>
  </ThingDef>

  <ThingDef ParentName="FurnitureWithQualityBase">
    <defName>Seat_Bench</defName>
    <label>bench</label>
    <description>A simple long platform on which multiple people may sit at the same time, not very comfortable but much better than nothing. Can be used at tables, work stations, and elsewhere.</description>
    <graphicData>
      <texPath>Things/Seating/Bench/Bench_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <linkType>Basic</linkType>
      <linkFlags>
        <li>Custom7</li>
      </linkFlags>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
        <edgeTop>Damage/Edge</edgeTop>
        <edgeBot>Damage/Edge</edgeBot>
        <edgeLeft>Damage/Edge</edgeLeft>
        <edgeRight>Damage/Edge</edgeRight>
      </damageData>
    </graphicData>
	<uiIconPath>Things/Seating/Bench/Bench_MenuIcon</uiIconPath>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <MaxHitPoints>75</MaxHitPoints>
      <WorkToBuild>450</WorkToBuild>
      <Mass>3</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>0</Beauty>
      <Comfort>0.5</Comfort>
