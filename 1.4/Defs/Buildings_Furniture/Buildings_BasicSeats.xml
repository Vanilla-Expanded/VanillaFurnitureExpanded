    <pathCost>30</pathCost>
    <fillPercent>0.20</fillPercent>
	<researchPrerequisites><li>MF_BasicFurniture</li></researchPrerequisites>
    <uiIconOffset>(0, -0.05)</uiIconOffset>
	<designationCategory>AOMorefurniture</designationCategory>
  </ThingDef>


